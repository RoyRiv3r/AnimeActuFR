{
  "manifest_version": 2,
  "name": "AnimeActu",
  "author": "RoyRiv3r",
  "version": "2.9.5",
  "description": "Extrait les infos depuis les sites web Animotaku, Planète BD Manga et Adala-News à la recherche de nouveaux articles et les affiche dans la fenêtre contextuelle.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "https://animotaku.fr/*",
    "https://adala-news.fr/*",
    "https://www.planetebd.com/*",
    "https://api.feedly.com/*",
    "https://otakumode.com/*",
    "https://www.cbr.com/*",
    "https://*.cbrimages.com/*"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js", "utils.js"]
  }
}
